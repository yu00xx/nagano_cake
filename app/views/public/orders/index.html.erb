<div class="container pt-5">
  <div class="row pb-3">
    <div class="col-md-8">
      <h4><span class="bg-light">注文履歴一覧</span></h4>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead class="table-active">
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">注文詳細</th>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="align-middle" style="width: 10%">
            <span class="pl-2"><%= order.created_at.strftime('%Y/%m/%d') %></span>
          </td>
          <td class="align-middle" style="width: 50%">
            〒<%= order.shipping_postal_code %></br>
            <%= order.shipping_address %></br>
            <%= order.shipping_name %>
          </td>
          <td class="align-middle" style="width: 15%">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %></br>
            <% end %>
          </td>
          <td class="align-middle" style="width: 10%"><%= order.billing_amount.to_s(:delimited) %>円</td>
          <td class="align-middle text-center" style="width: 15%"><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
