<div class="container">
  <div class="row pt-5">
    <div class="col-md-8">
      <h4><span class="bg-light">商品詳細</span></h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-5 text-center">
      <%= image_tag @item.get_image(200,200), class:"bd-placeholder-img" %>
    </div>
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-4">
          <p>商品名</p>
        </div>
        <div class="col-md-8">
          <%= @item.name %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-md-4">
          <p>商品説明</p>
        </div>
        <div class="col-md-8">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-md-4">
          <p>税抜価格</p>
        </div>
        <div class="col-md-8">
          <%= @item.price.to_s(:delimited) %>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-md-8 pl-5">
          <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>