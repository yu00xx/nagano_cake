<h2>商品編集</h2>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <p>商品画像 <%= f.file_field :image, accept: "image/*" %></p>
  <p>商品名 <%= f.text_field :name %></p>
  <p>商品説明 <%= f.text_area :introduction %></p>
  <p>税抜価格 <%= f.text_field :price %></p>
  <%= f.submit "変更を保存" %>
<% end %>
