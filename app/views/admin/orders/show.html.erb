<h2>注文履歴詳細</h2>

<div>購入者 <%= @order.customer.last_name %><%= @order.customer.first_name %></div>
<div>注文日<%= @order.created_at.strftime('%Y/%m/%d') %></div>
<div>
  配送先 〒<%= @order.shipping_postal_code %><%= @order.shipping_address %></br>
  <%= @order.shipping_name %>
</div>
<div>支払い方法<%= @order.payment_i18n %></div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.with_tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td>
          <% order_detail_subtotal = 0 %>
          <% order_detail_subtotal = order_detail.item.with_tax_price*order_detail.amount %>
          <%= order_detail_subtotal %>
          <% @total += order_detail_subtotal %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>商品合計 <%= @total %></div>
<div>送料 <%= @order.postage %></div>
<div>請求金額合計 <%= @order.billing_amount = @total + @order.postage %></div>