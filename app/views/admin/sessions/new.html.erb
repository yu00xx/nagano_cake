<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 mt-4">
      <div class="text-center">
        <h4><span class="bg-light">管理者ログイン</span></h4>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <div class="form-group row">
        <div class="input-group">
          <div class="col-md-2"></div>
          <label for="inputEmail" class="col-md-3 col-form-label text-center">メールアドレス</label>
          <div class="col-md-4 d-flex">
          <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
      <div class="form-group row">
        <div class="input-group">
          <div class="col-md-2"></div>
          <label for="inputPassword" class="col-md-3 col-form-label text-center">パスワード</label>
          <div class="col-md-4 d-flex">
          <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
      <div class="form-group row">
        <div class="input-group mt-3">
          <div class="col-md-2"></div>
          <span class="col-md-3"></span>
          <div class="col-md-4 d-flex">
            <%= f.submit "ログイン", class:"btn btn-primary" %>
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
