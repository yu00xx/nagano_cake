<div class="container pt-5">
  <div class="row">
    <div class="col-md-8">
      <h4><span class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h4>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-3">
          <p>会員ID</p>
        </div>
        <div class="col-md-9">
          <%= @customer.id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>氏名</p>
        </div>
        <div class="col-md-9">
          <%= @customer.last_name %><%= @customer.first_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>フリガナ</p>
        </div>
        <div class="col-md-9">
          <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>郵便番号</p>
        </div>
        <div class="col-md-9">
          <%= @customer.postal_code %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>住所</p>
        </div>
        <div class="col-md-9">
          <%= @customer.address %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>電話番号</p>
        </div>
        <div class="col-md-9">
          <%= @customer.telephone_number %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>メールアドレス</p>
        </div>
        <div class="col-md-9">
          <%= @customer.email %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <p>会員ステータス</p>
        </div>
        <div class="col-md-9">
          <% if @customer.is_deleted? %>
            <p class="text-muted">退会</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-2">
          <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
        </div>
        <div class="col-md-4">
          <%= link_to "注文履歴一覧を見る", admin_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

